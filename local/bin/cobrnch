#!/bin/bash

envoke()
{
	echo $@
	$@
}

PS3="Choose: "
select i in `svn ls $NEXUS_SVN/branches/ | grep nexus-2.1` trunk quit
do 
	[ "$i" = "" ] && continue
	[ "$i" = "quit" ] && exit 0
	echo "You chose $i"
	if [ "$i" = "trunk" ];
	then
		SRC=$NEXUS_SVN/$i
	else
		SRC=$NEXUS_SVN/branches/$i
	fi
	break
done

# 체크 아웃
CHECKOUT=
read -p "check out [y/N]: " CHECKOUT
if [[ -n "$CHECKOUT" ]]; then
	envoke svn co $SRC
fi
# vim: enc=utf8 fdm=marker cms=#%s
