#!/bin/bash

envoke()
{
	echo $@
	$@
}

TARGET_DIR=${NEXUS_SVN}/branches

PS3="Choose: "
select i in `svn ls ${TARGET_DIR}/` quit
do 
	[ "$i" = "" ] && continue
	[ "$i" = "quit" ] && exit 0
	echo "You chose $i"
		# A/S브랜치 (tags 에서 딴다.)
		# 브랜치 날짜는 해당 배포본의 배포날짜
		TARGET=${TARGET_DIR}/$i
	break
done

echo $TARGET

# 브랜치 삭제
REMOVE=
read -p "svn cp [y/N]: " REMOVE
if [[ -n "$REMOVE" ]]; then
	envoke svn rm $TARGET 
fi

# vim: enc=utf8 fdm=marker cms=#%s
